<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guomn.test1">
    <!--允许广播权限-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"></uses-permission>
    <!--允许获取app运行状态权限-->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <uses-permission android:name="android.intent.action.BOOT_COMPLETED"></uses-permission>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.guomn.test1.MainActivity"
            android:theme="@style/AppTheme"

            >
            <!--android:theme="@android:style/Theme.NoDisplay"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--<data android:host="MainActivity" android:scheme="com.example.guomn.test1"/>-->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.example.guomn.test1.sevice.TestService" />
        <service android:name="com.example.guomn.test1.sevice.GPSService" />

        <!--开机启动-->
        <receiver
            android:name="com.example.guomn.test1.receiver.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.DEFAULT" />
                <!--<data android:scheme="package" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.PACKAGE_RESTARTED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED"/>-->

            </intent-filter>

        </receiver>

    </application>

</manifest>